# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-CHANGE-IN-PRODUCTION-min-32-characters-required
JWT_SECRET_KEY=jwt-secret-key-CHANGE-IN-PRODUCTION-min-32-characters-required
JWT_ACCESS_TOKEN_EXPIRES=604800

# Database
DATABASE_URL=sqlite:///data/agridecision.db

# External APIs
OPENWEATHER_API_KEY=your_openweathermap_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per day;10 per minute

# Caching
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Logging
LOG_LEVEL=INFO